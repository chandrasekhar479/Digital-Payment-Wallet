import axios from "axios";

const API = axios.create({ baseURL: "http://localhost:5000" }); // Backend server

export const login = (formData) => API.post("/api/auth/login", formData);
export const register = (formData) => API.post("/api/auth/register", formData);
export const getWalletDetails = (token) => 
  API.get("/api/wallet", { headers: { Authorization: `Bearer ${token}` } });

export const addMoney = (token, amount) =>
  API.post("/api/wallet/add", { amount }, { headers: { Authorization: `Bearer ${token}` } });
